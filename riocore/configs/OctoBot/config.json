                            "type": "invert"
                        },
                        {
                            "type": "onerror"
                        }
                    ]
                }
            }
        },
        {
            "type": "blink",
            "pins": {
                "led": {
                    "pin": "LED:G",
                    "modifier": [
                        {
                            "type": "onerror",
                            "invert": true
                        }
                    ]
                }
            },
            "frequency": 1.0
        },
        {
            "type": "blink",
            "pins": {
                "led": {
                    "pin": "LED:R",
                    "modifier": [
                        {
                            "type": "onerror",
                            "invert": true
                        }
                    ]
                }
            },
            "frequency": 5.0
        },
